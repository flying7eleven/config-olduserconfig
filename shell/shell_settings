	echo "Loaded shell scripts for the computer at home"
	source $PHYSPATH/../shell_paths.zockepeter
elif [[ "$(hostname)" == "imedv18" ]]; then
	echo "Loaded shell scripts for the computer at work"
	source $PHYSPATH/../shell_paths.imedv18
